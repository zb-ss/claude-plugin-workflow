{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Recommended Claude Code settings for workflow plugin. Copy to your project's .claude/settings.json or .claude/settings.local.json",

  "permissions": {
    "defaultMode": "acceptEdits",

    "allow": [
      "Read",
      "Glob",
      "Grep",
      "LS",
      "Write",
      "Edit",
      "NotebookEdit",
      "NotebookRead",
      "Task",
      "TodoWrite",

      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git add *)",
      "Bash(git stash *)",
      "Bash(git checkout -b *)",
      "Bash(git switch -c *)",
      "Bash(git branch *)",
      "Bash(git log *)",

      "Bash(npm run *)",
      "Bash(npm test *)",
      "Bash(npm install)",
      "Bash(npm ci)",
      "Bash(npm audit)",
      "Bash(npx tsc *)",
      "Bash(npx eslint *)",
      "Bash(npx prettier *)",
      "Bash(npx jest *)",
      "Bash(npx vitest *)",

      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(bun *)",

      "Bash(composer *)",
      "Bash(php -l *)",
      "Bash(php artisan *)",
      "Bash(vendor/bin/phpunit *)",
      "Bash(vendor/bin/phpstan *)",
      "Bash(vendor/bin/phpcs *)",

      "Bash(python -m py_compile *)",
      "Bash(python -m pytest *)",
      "Bash(pip install *)",
      "Bash(pip-audit)",
      "Bash(ruff *)",
      "Bash(mypy *)",

      "Bash(cargo *)",
      "Bash(go build *)",
      "Bash(go test *)",

      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(find *)",
      "Bash(which *)",
      "Bash(echo *)"
    ],

    "ask": [
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(rm *)",
      "Bash(rmdir *)"
    ],

    "deny": [
      "Bash(rm -rf *)",
      "Bash(git reset --hard *)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(chmod 777 *)",
      "Bash(sudo *)",
      "Bash(curl * | sh)",
      "Bash(curl * | bash)",
      "Bash(wget * | sh)",
      "Bash(wget * | bash)"
    ]
  },

  "notes": {
    "usage": "Copy this to your project's .claude/settings.json (shared) or .claude/settings.local.json (personal)",
    "allow": "These commands run without prompts during workflows",
    "ask": "These commands require explicit user confirmation",
    "deny": "These commands are always blocked for safety"
  }
}
