import { chromium, FullConfig } from '@playwright/test';

async function globalSetup(config: FullConfig) {
  const browser = await chromium.launch();
  const page = await browser.newPage();

  await page.goto('{{LOGIN_URL}}');

  await page.getByLabel('{{EMAIL_LABEL}}').fill(process.env.E2E_USER ?? '');
  await page.getByLabel('{{PASSWORD_LABEL}}').fill(process.env.E2E_PASS ?? '');
  await page.getByRole('button', { name: '{{SUBMIT_TEXT}}' }).click();

  await page.waitForURL('{{POST_LOGIN_URL}}');

  await page.context().storageState({ path: '{{AUTH_STATE_FILE}}' });

  await browser.close();
}

export default globalSetup;
